{
  "id": "elife",
  "name": "eLife",
  "displayName": "eLife",
  "isSystem": true,
  "sort": {
    "mode": "citation-order",
    "key": "citation_order"
  },
  "authorRules": {
    "maxAuthors": 5,
    "etAlAfter": 5,
    "delimiter": ", ",
    "finalDelimiter": ", ",
    "format": "LastName FirstInitial"
  },
  "title": {
    "include": true,
    "case": "sentence",
    "endPunctuation": "."
  },
  "journal": {
    "useItalic": true,
    "useVenue": true,
    "fallbackAbbreviation": "eLife"
  },
  "volume": {
    "useBold": true,
    "includeIssue": false,
    "format": "article-number",
    "pageSeparator": ""
  },
  "doi": {
    "include": true,
    "prefix": "doi:"
  },
  "year": {
    "format": "parentheses"
  },
  "template": "{authors}. {title}. {journal} {volume}, {pages} ({year}). {doi}"
}



